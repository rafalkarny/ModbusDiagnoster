            </TabControl>



            <Grid Grid.Row="3">
                <TabControl>
                    <TabItem Header="Log">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <Button
                            x:Name="clearBtn"
                                Content="{StaticResource CleanBtn}"
                                FontSize="10"
                                Margin="1"
                                Command="{Binding ClearLogs}"
                                >
                                </Button>
                            </StackPanel>
                            <ListBox x:Name="logLstBox" 
                                    Grid.Row="1"
                                     ItemsSource="{Binding ExceptionMessages}"></ListBox>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Communication monitor">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <Button
                            x:Name="clearMonBtn"
                                Content="{StaticResource CleanBtn}"
                                FontSize="10"
                                Margin="1"
                                Command="{Binding ClearMon}"
                                >
                                </Button>
                            </StackPanel>
                            <ListBox x:Name="monLstBox" 
                                    Grid.Row="1"
                                     ItemsSource="{Binding MonitorMessages}"></ListBox>
                        </Grid>
                    </TabItem>

                </TabControl>
            </Grid>

            <GridSplitter  Grid.Row="2"
                      x:Name="grdSplitter2"
                           Margin="0"
                      HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Background="Black" 
              ShowsPreview="True"
              Width="10"
              
              />

        </Grid>
    </Grid>

</Window>
