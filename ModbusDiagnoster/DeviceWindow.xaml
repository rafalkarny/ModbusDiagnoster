<Window x:Class="ModbusDiagnoster.DeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModbusDiagnoster" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:viewmodels="clr-namespace:ModbusDiagnoster.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:DeviceViewModel}"
        mc:Ignorable="d"
        Title="Urządzenie" Height="450" Width="800"
        x:Name="deviceWindow" WindowStartupLocation="CenterScreen"
        >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition 
                x:Name="grdCol1"
                Width="Auto" ScrollViewer.CanContentScroll="True" ></ColumnDefinition>
            <ColumnDefinition
                x:Name="grdCol2"
                ></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <GridSplitter Grid.Column="1" Grid.Row="1"
                      x:Name="grdSplitter"
                      HorizontalAlignment="Left"
              VerticalAlignment="Stretch"
              Background="Black" 
              ShowsPreview="True"
              Width="5"
              
              />

        <Grid MinWidth="200" Visibility="Visible" x:Name="propertiesGrid"
              MaxWidth="600" ScrollViewer.CanContentScroll="True"
              Grid.Column="0"
              >
            <TabControl>
                <TabItem
                    Header="Modbus TCP"
                    >
                    <StackPanel>
                        <RadioButton x:Name="tcpRadBtn" Content="Modbus TCP"
                                     IsChecked="{Binding ModbusTCPSelected}"
                                     ></RadioButton>
                    <GroupBox 
                        Margin="5"
                        >
                            <StackPanel>
                                <Label Content="IPv4:"></Label>
                            <TextBox x:Name="ipTxtBox" Margin="2"
                                     Text="{Binding DeviceTCP.IPAddr}"></TextBox>
                                <Label Content="Port:" ></Label>
                                <TextBox x:Name="portTxtBox"
                                         Text="{Binding DeviceTCP.Port}" Margin="2"></TextBox>
                                <Label Content="Slave ID:"></Label>
                                <TextBox x:Name="slaveIdTxtBox" Text="{Binding DeviceTCP.SlaveId}"
                                         
                                         ></TextBox>
                            </StackPanel>
                    </GroupBox>
                        <RadioButton x:Name="rtuRadBtn" Content="Modbus RTU"
                                     IsChecked="{Binding ModbusRTUSelected}"></RadioButton>
                    <GroupBox
                        Margin="5">
                        
                    </GroupBox>
                    </StackPanel>
                </TabItem>
                <TabItem
                    Header="Modbus RTU"
                    >
                    
                </TabItem>
            </TabControl>
        </Grid>

        <Grid Grid.Column="1" Margin="6,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <!--MENU-->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button
            x:Name="propertiesBtn"
            Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
            Width="30"
            Height="30"
            Grid.Row="0"            
            Click="propertiesBtn_Click"
            HorizontalAlignment="Left" VerticalAlignment="Bottom"
            Margin="5"
            >
                <materialDesign:PackIcon
                            Kind="CogOutline"
                            Height="20"
                            Width="20" 
                            />
            </Button>
            <Button
            x:Name="startBtn"
            Style="{StaticResource MaterialDesignFloatingActionAccentButton}"
            Width="30"
            Height="30"
            Grid.Row="0"            
            Command="{Binding StartPooling}"
            HorizontalAlignment="Left" VerticalAlignment="Bottom"
            Margin="5"
            >
                <materialDesign:PackIcon
                            Kind="Play"
                            Height="20"
                            Width="20" 
                            />
            </Button>
            </StackPanel>
            
            <!-- COILS-->
            <TabControl Grid.Row="1" >
                <TabItem Name="CoilsCard" Header="Coils" 
                     Background="{DynamicResource MaterialDesignPaper}"
                     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
                     >
                    <DataGrid x:Name="CoilsDataGrd" ItemsSource="{Binding Coils}"></DataGrid>
                
                </TabItem>

                <!-- DISCRETE INPUTS-->
            <TabItem Name="DiscreteInputsCard" Header="Discrete Inputs"
                     Background="{DynamicResource MaterialDesignPaper}"
                     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
                     >
                    <DataGrid x:Name="InputsDataGrd" ItemsSource="{Binding Inputs}"></DataGrid>
                </TabItem>

                <!-- HOLDING REGISTERS-->
                <TabItem Name="HoldingRegistersCard" Header="Holding Registers"
                     Background="{DynamicResource MaterialDesignPaper}"
                     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
                     >
                    <DataGrid x:Name="HRdataGrd" ItemsSource="{Binding HoldingRegisters,Mode=TwoWay}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Wyłączona" 
                                                Binding="{Binding Disabled}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}"
                                                ></DataGridCheckBoxColumn>
                            <DataGridTextColumn Header="Nazwa" 
                                                Binding="{Binding Name}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>
                            <DataGridTextColumn Header="Adres" 
                                                Binding="{Binding StartAddress}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>
                            <materialDesign:DataGridComboBoxColumn Header="Typ wartości" 
                                                SelectedValueBinding="{Binding VariableTypeFormat}" 
                                              IsEditable="False"
                                            ItemsSourceBinding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.VarTypes}"
                                             >
                            </materialDesign:DataGridComboBoxColumn>
                            <DataGridTextColumn Header="Wartość" 
                                                Binding="{Binding Value,Mode=TwoWay}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>
                            <DataGridTextColumn Header="Funkcja przeliczająca" 
                                                Binding="{Binding ConversionFunction}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>
                            <DataGridTextColumn Header="Wartość formatowana" 
                                                Binding="{Binding ConvertedValue}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>
                            <DataGridTextColumn Header="Format wyświetlania" 
                                                Binding="{Binding Format}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>

                            <DataGridTextColumn Header="Jednostka" 
                                                Binding="{Binding Unit}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>
                            <DataGridTextColumn Header="Opis" 
                                                Binding="{Binding Description}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>
                            <DataGridTextColumn Header="Okres próbkowania [ms]" 
                                                Binding="{Binding SamplePeriod}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>
                            <DataGridTextColumn Header="Zakres od" 
                                                Binding="{Binding LowRange}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>
                            <DataGridTextColumn Header="Zakres do" 
                                                Binding="{Binding HighRange}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>
                            <DataGridTextColumn Header="Zakres wyświetlania od" 
                                                Binding="{Binding LowDisplayRange}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>
                            <DataGridTextColumn Header="Zakres wyświetlania do" 
                                                Binding="{Binding HighDisplayRange}" 
                                                      ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                                ></DataGridTextColumn>
                        </DataGrid.Columns>
                        
                        
                    </DataGrid>
                </TabItem>
                
                <!-- INPUT REGISTERS -->
                <TabItem Name="InputRegistersCard" Header="Input Registers"
                     Background="{DynamicResource MaterialDesignPaper}"
                     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
                     >
                    <DataGrid x:Name="IRdataGrd" ItemsSource="{Binding InputRegisters}"></DataGrid>
                </TabItem>

            </TabControl>


        
        </Grid>
    </Grid>

</Window>
